# ===========================
# JWT Authentication Secrets
# ===========================
# IMPORTANT: Generate secure random secrets for production!
# Use: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-here-64-chars-minimum
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-64-chars-minimum-different-from-jwt-secret

# ===========================
# Google OAuth
# ===========================
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================
# Database (Neon PostgreSQL)
# ===========================
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:password@host/database?sslmode=require

# ===========================
# Redis (Upstash)
# ===========================
KV_REST_API_TOKEN=your-upstash-token
KV_REST_API_URL=https://your-redis.upstash.io
KV_URL=rediss://default:token@your-redis.upstash.io:6379
REDIS_URL=rediss://default:token@your-redis.upstash.io:6379

# ===========================
# Vercel Blob Storage
# ===========================
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# ===========================
# MapTiler
# ===========================
VITE_MAPTILER_API_KEY=your-maptiler-api-key

# ===========================
# API Configuration
# ===========================
# For development
VITE_API_BASE_URL=http://localhost:3001

# For production
# VITE_API_URL=https://your-production-domain.vercel.app

# ===========================
# Server Configuration
# ===========================
NODE_ENV=development
PORT=3001

# ===========================
# CORS Origins
# ===========================
# Comma-separated list of allowed origins
CORS_ORIGIN_PROD=https://your-production-domain.vercel.app
CORS_ORIGIN_DEV=http://localhost:5173,http://localhost:3000

# ===========================
# Optional: Gemini API
# ===========================
GEMINI_API_KEY=your-gemini-api-key-if-needed
